<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_userprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <ScrollView
            style="@style/CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/captureimageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/drawable" />

                <ImageView
                    android:id="@+id/bChangeImage"
                    style="@style/FloatingTextView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/captureimageView"
                    android:alpha="0.7"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:onClick="SetImage"
                    android:padding="8dp"
                    android:src="@drawable/ic_mode_edit_black_48dp"
                    android:translationZ="0dp" />

                <ImageView
                    android:id="@+id/bDeleteImage"
                    style="@style/FloatingTextView"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/bChangeImage"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@+id/captureimageView"
                    android:layout_toRightOf="@+id/captureimageView"
                    android:alpha="0.7"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:onClick="removeImage"
                    android:padding="8dp"
                    android:src="@drawable/ic_delete_black_48dp"
                    android:translationZ="0dp" />

                <RelativeLayout
                    android:id="@+id/profilerel1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/captureimageView">

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:alpha="0.6"
                        android:padding="12dp"
                        android:src="@drawable/ic_question_answer_black_48dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/profileUsername"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/icon1"
                        android:gravity="center"
                        android:text="Username"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profilerel2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/profilerel1">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:alpha="0.6"
                        android:padding="12dp"
                        android:src="@drawable/ic_person_black_48dp" />

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/icon2"
                        android:gravity="center"
                        android:text="Name"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profilerel3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/profilerel2">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:alpha="0.6"
                        android:padding="12dp"
                        android:src="@drawable/ic_email_black_48dp" />

                    <TextView
                        android:id="@+id/profileEmail"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/icon3"
                        android:gravity="center_vertical"
                        android:text="Email ID"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/icon3"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgeditemail"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:alpha="0.5"
                        android:onClick="editEmail"
                        android:padding="8dp"
                        android:src="@drawable/ic_mode_edit_black_48dp" />

                    <ImageView
                        android:id="@+id/imgconfirmemail"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:alpha="0.7"
                        android:clickable="true"
                        android:padding="15dp"
                        android:src="@drawable/ic_offline_pin_black_48dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profilerel4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/profilerel3">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:alpha="0.6"
                        android:padding="12dp"
                        android:src="@drawable/ic_cake_black_48dp" />

                    <TextView
                        android:id="@+id/profileAge"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/icon4"
                        android:gravity="center"
                        android:text="Age"
                        android:textSize="17sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profilerel5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/profilerel4"
                    android:layout_marginBottom="20dp">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/darker_gray" />

                    <ImageView
                        android:id="@+id/icon5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:alpha="0.6"
                        android:padding="12dp"
                        android:src="@drawable/ic_call_black_48dp" />

                    <TextView
                        android:id="@+id/profilePhone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/icon5"
                        android:gravity="center"
                        android:text="Phone"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/icon5"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgeditphone"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:alpha="0.5"
                        android:onClick="editPhone"
                        android:padding="8dp"
                        android:src="@drawable/ic_mode_edit_black_48dp" />

                    <ImageView
                        android:id="@+id/imgconfirmphone"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:alpha="0.7"
                        android:clickable="true"
                        android:padding="15dp"
                        android:src="@drawable/ic_offline_pin_black_48dp"
                        android:visibility="gone" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/menu_drawer" />

</android.support.v4.widget.DrawerLayout>